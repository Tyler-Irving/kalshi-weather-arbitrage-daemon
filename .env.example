# Kalshi API Credentials
# Get these from https://kalshi.com/account/api-keys
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=/path/to/your/kalshi_private.pem

# Telegram Bot (Optional - for trade notifications)
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading Configuration
PAPER_TRADING=true  # Set to 'false' ONLY when ready for live trading
MAX_CONTRACTS=8
MAX_COST_PER_TRADE=500  # cents ($5.00)
MAX_OPEN_POSITIONS=20
MAX_DAILY_TRADES=40
MIN_EDGE_CENTS=10
MIN_CONFIDENCE_SCORE=0.5

# Polling Interval (seconds)
POLL_INTERVAL=900  # 15 minutes

# Risk Management
MAX_DAILY_LOSS_CENTS=500   # $5.00 daily stop-loss
MAX_WEEKLY_LOSS_CENTS=1000  # $10.00 weekly stop-loss

# File Paths (optional - defaults to current directory)
# LOG_PATH=./kalshi_unified_log.txt
# STATE_PATH=./kalshi_unified_state.json
# PNL_PATH=./kalshi_pnl.json
